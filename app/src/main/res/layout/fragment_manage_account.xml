<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/fragment_style"
    android:id="@+id/mainAccountLayout"
    tools:context=".Activities.Fragments.ManageAccountFragment">



    <ImageView
        android:id="@+id/imageView"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inn" />
    <TextView
        android:id="@+id/usernameTitleTextView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Username:"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />
    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/usernameTitleTextView"
        app:layout_constraintTop_toTopOf="@id/usernameTitleTextView" />

    <TextView
        android:id="@+id/nameTitleTextView"
        android:layout_width="120dp"
        android:layout_height="80dp"
        android:text="Name:"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/usernameTitleTextView" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="180dp"
        android:layout_height="80dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/nameTitleTextView"
        app:layout_constraintTop_toTopOf="@id/nameTitleTextView" />

    <TextView
        android:id="@+id/addressTitleTextView"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_marginLeft="20dp"
        android:text="Email:"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nameTitleTextView" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        android:layout_marginLeft="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTitleTextView" />

    <TextView
        android:id="@+id/dobTitleTextView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginLeft="20dp"
        android:text="Date Of Birth:"
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/emailTextView" />

    <TextView
        android:id="@+id/dobTextView"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="25sp"
        app:layout_constraintStart_toEndOf="@id/dobTitleTextView"
        app:layout_constraintTop_toBottomOf="@id/emailTextView" />


    <TextView
        android:id="@+id/spacingTextView"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTitleTextView" />
    <TextView
        android:id="@+id/spacing2TextView"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:text=""
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/addressTitleTextView" />

    <Button
        android:id="@+id/editInfoBtn"
        style="@style/login_btn_style"
        android:layout_marginHorizontal="100dp"
        android:layout_marginStart="72dp"
        android:text="Edit Contact Info"
        android:visibility="visible"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>