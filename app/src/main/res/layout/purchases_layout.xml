<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="80dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/inn" />

    <TextView
        android:id="@+id/purchase_item"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:text="Purchase: Corn Shoots"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/imageView" />

    <TextView
        android:id="@+id/purchase_price"
        android:layout_width="280dp"
        android:layout_height="25dp"
        android:text="Price: $10.00"
        android:textColor="#FF0000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/purchase_item"
        app:layout_constraintStart_toEndOf="@id/imageView" />

    <TextView
        android:id="@+id/purchase_date"
        android:layout_width="280dp"
        android:layout_height="50dp"
        android:text="Date: Tuesday April 24th"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/purchase_price"
        app:layout_constraintStart_toEndOf="@id/imageView"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="#FF0000"
        app:layout_constraintTop_toBottomOf="@id/imageView"
        app:layout_constraintStart_toStartOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>