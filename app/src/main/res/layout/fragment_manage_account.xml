<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/manageAccountFragID"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/accountInfoScrollID"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:scrollbars="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@id/manageAccountFragID"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/profilePic"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:scr="@drawable/profile_icon"
                tools:layout_editor_absoluteX="175dp"
                tools:layout_editor_absoluteY="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/fnameTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text="First Name:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/profilePic" />
            <TextView
                android:id="@+id/fname"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="28dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/fnameTitle"
                app:layout_constraintTop_toBottomOf="@id/profilePic" />

            <TextView
                android:id="@+id/lnameTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Last Name:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/fname"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/lname"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=""
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/lnameTitle"
                app:layout_constraintTop_toBottomOf="@id/fname" />


            <TextView
                android:id="@+id/usernameTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Username:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/lname"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/usernameID"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/usernameTitle"
                app:layout_constraintTop_toBottomOf="@id/lname" />

            <TextView
                android:id="@+id/passwordIDTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Password:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/usernameID"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/passwordID"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/passwordIDTitle"
                app:layout_constraintTop_toBottomOf="@id/usernameID" />

            <TextView
                android:id="@+id/addresTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Address:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/passwordID"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/address"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/addresTitle"
                app:layout_constraintTop_toBottomOf="@id/passwordID" />

            <TextView
                android:id="@+id/phonenumberTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Phone:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/address"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/phonenumber"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/phonenumberTitle"
                app:layout_constraintTop_toBottomOf="@id/address" />

            <TextView
                android:id="@+id/emailTitle"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="E-mailP:"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/phonenumber"
                app:layout_constraintStart_toStartOf="parent" />
            <TextView
                android:id="@+id/email"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text=" "
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintStart_toEndOf="@id/emailTitle"
                app:layout_constraintTop_toBottomOf="@id/phonenumber" />

            <TextView
                android:id="@+id/emptySpace"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                app:layout_constraintTop_toBottomOf="@id/email"
                app:layout_constraintStart_toStartOf="parent"
                />

            <TextView
                android:id="@+id/paymentinfo"
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:text="Payment Info"
                android:textColor="#000000"
                android:textSize="20sp"
                app:layout_constraintTop_toBottomOf="@id/emptySpace"
                app:layout_constraintStart_toStartOf="parent" />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</LinearLayout>

